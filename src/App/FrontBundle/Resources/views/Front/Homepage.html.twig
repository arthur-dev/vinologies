{% extends 'AppFrontBundle:Layout:Layout.html.twig' %}


{% block content %}

    {# Page d'acueil#}
    <div class="row " id="frontfullpage">
        <div class="center_text white center_on_slide" >
            <h1>Dégustation à domicile</h1>
        </div>
    </div>

    {# Slide future dégustations#}
    <div class="row paddingTopBottom" >
        <div class="col-sm-offset-1 col-sm-10">
            <div class="row">
                <div class="col-sm-4">
                    {% include 'AppFrontBundle:Layout:vignetteAccueil.html.twig' with {
                    'title': 'Mercredi 12 Mars' ,
                    'texte': 'Edouard vous invite à découvrir une séléction de medoc' ,
                    'button': 'Réservez vos places !',
                    'id':1,
                    'urlpicture': 'http://avis-vin.lefigaro.fr/var/img/56/13757-650x330-degust.jpg'} %}
                </div>
                <div class="col-sm-4">
                    {% include 'AppFrontBundle:Layout:vignetteAccueil.html.twig' with {
                    'title': 'Lundi 18 Mars' ,
                    'texte': 'Arthur vous invite à découvrir une séléction de Pessac' ,
                    'button': 'Réservez vos places !',
                    'id':2,
                    'urlpicture': 'http://avis-vin.lefigaro.fr/var/img/56/13757-650x330-degust.jpg'} %}
                </div>
                <div class="col-sm-4">
                    {% include 'AppFrontBundle:Layout:vignetteAccueil.html.twig' with {
                    'title': 'Mercredi 26 Mars' ,
                    'texte': 'Jean-Patrick le Shlag nous vous invite à découvrir une séléction de vin de table qui piquent la gorge' ,
                    'button': 'Réservez vos places !',
                    'id':3,
                    'urlpicture': 'http://avis-vin.lefigaro.fr/var/img/56/13757-650x330-degust.jpg'} %}
                </div>
            </div>
        </div>
    </div>

    {# Slide fullpage 2#}
    <div class="row " id="fullpage2"></div>

{% endblock %}


{% block css %}
    {{ parent() }}
    <style>
        #frontfullpage{
            height:100vh;
            background:url('{{ asset('public/image/fond/glass_wine_red_pouring_a_bottle_black_background_wallpaper.jpg') }}');
            background-size: cover;
            background-attachment: fixed;

        }

        #fullpage2{
            height:100vh;
            background:url('{{ asset('public/image/fond/images.jpg') }}');
            background-size: cover;
            background-attachment: fixed;

        }
    </style>

{% endblock %}