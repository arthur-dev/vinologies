{% extends 'AppFrontBundle:Layout:Layout.html.twig' %}

{% block content %}
    <div class="padding-body" style="padding-top: 8vh;">
        <div class="row">
            <div class="col-md-offset-4 col-md-4">
               {%  if error %}
                   <div> {{ error.message }}</div>
               {% endif %}

               <h3 class="center_text">Login</h3>
               <form action="{{ path('login_check') }}" method="post">

                   <div class="center_img mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                       <input class="mdl-textfield__input" type="text" id="sample3"  name="_username" value="{{ last_pseudo }}">
                       <label class="mdl-textfield__label" for="sample3">Login</label>
                   </div>

                   <div class="center_img mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                       <input class="mdl-textfield__input" type="password" id="sample3" name="_password">
                       <label class="mdl-textfield__label" for="sample3">Password</label>
                   </div>
                    <br>
                   <button type="submit" class=" center_img mdl-button mdl-js-button mdl-button--primary">
                       Connexion
                   </button>


               </form>
           </div>
        </div>
    </div>

{% endblock %}